<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/popup_layout_background">
    
    <ImageView
        android:id="@+id/popup_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/delete_white_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/flex_xec_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_close"
        android:text="@string/flexXec_overlay_txt"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/change_to_flex_Xec"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_close"
        android:src="@drawable/arrow_white_36dp" />
    <TextView
        android:id="@+id/viSat_ku_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flex_xec_overlay"
        android:text="@string/viasat_ku_overlay"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/change_to_viSat_ku"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_to_flex_Xec"
        android:src="@drawable/arrow_white_36dp" />

    <TextView
        android:id="@+id/normal_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viSat_ku_overlay"
        android:text="@string/normal_map"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/change_to_normal"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/normal_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_to_viSat_ku"
        android:src="@drawable/arrow_white_36dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>